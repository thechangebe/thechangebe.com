{
    "name": "thechangebe.com",
    "repository": "thechangebe/thechangebe.com",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "scripts": {
        "all:watch": "lerna run --parallel watch",
        "website:watch": "lerna run watch --scope @thechangebe/website",
        "website:build": "lerna run build --scope @thechangebe/website",
        "website:lint": "lerna run lint --scope @thechangebe/website",
        "geojson:lint": "lerna run lint --scope @thechangebe/data-sets",
        "geojson:fix": "lerna run fix --scope @thechangebe/data-sets"
    },
    "dependencies": {
        "@thechangebe/website": "file:packages/website",
        "ramda": "^0.27.0"
    },
    "devDependencies": {
        "@babel/types": "^7.10.3",
        "@types/ramda": "^0.27.6",
        "@types/react": "^16.9.41",
        "@types/react-map-gl": "^5.2.4",
        "@types/styled-system": "^5.1.9",
        "babel-plugin-emotion": "^10.0.33",
        "babel-plugin-macros": "^2.8.0",
        "lerna": "^3.22.1",
        "typescript": "^3.9.5"
    }
}
